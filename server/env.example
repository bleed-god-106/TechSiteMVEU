# Backend переменные окружения

# Порт сервера
PORT=3001

# MongoDB подключение
MONGO_URI=mongodb://localhost:27017/tech-site-craft

# JWT секретный ключ (измените в production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters

# CORS настройки
CORS_ORIGIN=http://localhost:8080

# Режим работы
NODE_ENV=development

# Для production используйте:
# NODE_ENV=production
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tech-site-craft
# JWT_SECRET=your-production-secret-key-min-32-characters
# CORS_ORIGIN=https://your-domain.com 